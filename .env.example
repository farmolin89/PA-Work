# .env.example
# Скопируйте этот файл в .env и заполните реальными значениями

# Сгенерированный уникальный ключ для сессий (32+ символа)
# Генерируйте с помощью: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your_session_secret_here_minimum_32_characters

# Секретный ключ для CSRF защиты (32 символа)
# Генерируйте с помощью: node -e "console.log(require('crypto').randomBytes(16).toString('hex'))"
CSRF_SECRET=your_csrf_secret_exactly_32_chars

# Режим работы приложения (development, test, production)
NODE_ENV=development

# Порт, на котором запускается сервер
PORT=3000

# Базовый URL приложения для генерации ссылок
APP_BASE_URL=http://localhost:3000
